<Window x:Class="Minesweeper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Minesweeper"
        mc:Ignorable="d"
        Title="Minesweeper" Height="208" Width="164" Background="#FFBDBDBD" ResizeMode="CanMinimize"
        Loaded="Window_Loaded" WindowStartupLocation="CenterScreen">

    <Grid Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="34"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!-- Grid where the Gameboard lies. -->
        <Grid x:Name="gridGameBoard" Grid.Row="1" Height="144" Width="144" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
        </Grid>
        <!-- Grid for flag/mine counter-->
        <Grid x:Name="gridFlagCount" Grid.Row="0" ColumnDefinitions="13,13,13" RowDefinitions="23" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,10,0">
            <Image x:Name="imgFlagDigit1" Grid.Column="0" Width="13" Height="23" Stretch="None" />
            <Image x:Name="imgFlagDigit2" Grid.Column="1" Width="13" Height="23" Stretch="None" />
            <Image x:Name="imgFlagDigit3" Grid.Column="2" Width="13" Height="23" Stretch="None" />
        </Grid>
        <!-- Difficulty selector.-->
        <ComboBox x:Name="DifficultyMenu" Width="20" Height="24" HorizontalAlignment="Left" SelectedIndex="0" SelectionChanged="DifficultyMenu_SelectionChanged">
            <ComboBoxItem Tag="10" Content="Easy"/>
            <ComboBoxItem Tag="40" Content="Medium"/>
            <ComboBoxItem Tag="99" Content="Hard"/>
        </ComboBox>
        <Button x:Name="btnRestartButton" Content="Button" Cursor="Hand" Margin="5" HorizontalAlignment="Center" Width="24" Height="24" BorderThickness="0" Padding="0" 
                Click="RestartButton_Click" PreviewMouseLeftButtonDown="RestartButton_PreviewMouseLeftButtonDown" PreviewMouseLeftButtonUp="RestartButton_PreviewMouseLeftButtonUp"/>
    </Grid>
</Window>
